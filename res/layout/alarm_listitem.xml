<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
<RelativeLayout
     android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:layout_weight="1.0"
	 android:layout_marginLeft="10dp"
	 android:gravity="center">
<TextView
    	style="@style/alarm_item_title"
	    android:id="@+id/alarmTitle" 
	    android:textColor="#3f3f3f"
	    android:text="Alarm Title"/>  
<TextView
    android:id="@+id/alarmMessage"
    android:layout_below="@id/alarmTitle"
    android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:text= "Alarm message"
	android:layout_weight="1.0"
	android:gravity="center_vertical"
	android:textColor="#656565"
	android:textSize="14sp"/>  
</RelativeLayout>

<TextView
    android:id="@+id/alarmDistance"
 	android:layout_width="wrap_content"
    android:layout_height="match_parent"
	android:text= "~100m"
	android:layout_weight="0.0"
	android:gravity="center"
	android:textSize="18sp"/>    
    
<ToggleButton  
    android:id="@+id/alarmActive"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_margin="8dp"
	android:focusable="false"
	android:text=" >> "
	android:textOn="@string/activeOffText"
	android:textOff="@string/activeOnText"	
	android:textSize="12sp"
    android:layout_weight="0.0"
    android:gravity="center"/>
</LinearLayout>