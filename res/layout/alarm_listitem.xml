<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
<RelativeLayout
     android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 android:layout_weight="1.0"
	 android:layout_marginLeft="10dp"
	 android:gravity="center">
<TextView
    	style="@style/alarm_item_title"
	    android:id="@+id/alarmTitle" 
	    android:text="Alarm Title"/>  
<TextView
    style="@style/alarm_item_message"
    android:id="@+id/alarmMessage"
    android:layout_below="@id/alarmTitle"
	android:text= "Alarm message"
	/>  
</RelativeLayout>
<TextView
    style="@style/alarm_item_distance"
    android:id="@+id/alarmDistance"
	android:text= "~100m"
	/>     
<ToggleButton  
    style="@style/alarm_item_button"
    android:id="@+id/alarmActive"
	android:layout_margin="8dp"
	android:focusable="false"
	android:textOn="@string/activeOffText"
	android:textOff="@string/activeOnText"	
	/>
</LinearLayout>