<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="alarm_item_title" parent="@android:style/Widget.TextView">
	  <item name="android:layout_width">match_parent</item>
	  <item name="android:layout_height">wrap_content</item>
	  <item name="android:layout_weight">1.0</item>
	  <item name="android:gravity">center_vertical</item>
	  <item name="android:textSize">14sp</item>
	  <item name="android:textColor">#3f3f3f</item>
	</style>
	<style name="alarm_item_message" parent="@android:style/Widget.TextView">
	  <item name="android:layout_width">match_parent</item>
	  <item name="android:layout_height">wrap_content</item>
	  <item name="android:layout_weight">1.0</item>
	  <item name="android:gravity">center_vertical</item>
	  <item name="android:textSize">12sp</item>
	  <item name="android:textColor">#656565</item>
	</style>
	<style name="alarm_item_distance" parent="@android:style/Widget.TextView">
	  <item name="android:layout_width">wrap_content</item>
	  <item name="android:layout_height">match_parent</item>
	  <item name="android:layout_weight">0.0</item>
	  <item name="android:gravity">center</item>
	  <item name="android:textSize">14sp</item>
	</style>
	<style name="alarm_item_button" parent="@android:style/Widget.Button">
	  <item name="android:layout_width">45dp</item>
	  <item name="android:layout_height">45dp</item>
	  <item name="android:layout_weight">0.0</item>
	  <item name="android:gravity">center</item>
	  <item name="android:textSize">13sp</item>
	  <item name="android:textColor">#3f3f3f</item>
	  <item name="android:focusable">false</item>
	</style>
</resources>